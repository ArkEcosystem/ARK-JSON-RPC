{
    "name": "@arkecosystem/exchange-json-rpc",
    "version": "1.0.0-next.0",
    "description": "A JSON-RPC 2.0 specification compliant server for Exchanges to interact with the ARK Blockchain.",
    "license": "MIT",
    "author": "Brian Faust <brian@ark.io>",
    "files": [
        "/bin",
        "/dist",
        "/oclif.manifest.json"
    ],
    "main": "dist/index",
    "types": "dist/index",
    "bin": {
        "exchange-json-rpc": "./bin/run"
    },
    "scripts": {
        "build": "yarn clean && yarn compile",
        "build:watch": "yarn clean && yarn compile -w",
        "clean": "del dist",
        "compile": "../../node_modules/typescript/bin/tsc",
        "exchange-json-rpc": "./bin/run",
        "format": "yarn lint && yarn prettier",
        "lint": "../../node_modules/tslint/bin/tslint -c ../../tslint.json -p ../../tslint-config.json './src/**/*.ts' --fix",
        "prepack": "../../node_modules/.bin/oclif-dev manifest && npm shrinkwrap",
        "postpack": "rm -f oclif.manifest.json",
        "prepublishOnly": "yarn build",
        "prettier": "prettier --write \"./*.{ts,js,json,md}\" \"./src/**/*.{ts,js,json,md}\" \"./__tests__/**/*.{ts,js,json,md}\"",
        "test": "jest --forceExit --runInBand"
    },
    "jest": {
        "bail": true,
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/index.ts",
            "!**/node_modules/**"
        ],
        "coverageDirectory": "<rootDir>/.coverage",
        "coverageReporters": [
            "json",
            "lcov",
            "text",
            "clover",
            "html"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "setupFilesAfterEnv": [
            "jest-extended"
        ],
        "testEnvironment": "node",
        "testMatch": [
            "**/*.test.ts"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "verbose": true,
        "watchman": false
    },
    "dependencies": {
        "@arkecosystem/core-utils": "^2.4.0-next.3",
        "@arkecosystem/crypto": "^2.4.0-next.3",
        "@hapi/boom": "^7.4.2",
        "@hapi/hapi": "^18.3.1",
        "@hapist/json-rpc": "^0.2.0",
        "@hapist/whitelist": "^0.1.0",
        "better-sqlite3": "^5.4.0",
        "bip39": "^3.0.2",
        "fs-extra": "^8.0.1",
        "is-reachable": "^3.1.0",
        "lodash.sample": "^4.2.1",
        "pino": "^5.12.6",
        "pino-pretty": "^3.1.0",
        "sql": "^0.78.0",
        "uuid": "^3.3.2",
        "wif": "^2.0.6"
    },
    "devDependencies": {
        "@sindresorhus/tsconfig": "^0.3.0",
        "@types/boom": "^7.2.1",
        "@types/execa": "^0.9.0",
        "@types/fast-levenshtein": "^0.0.1",
        "@types/fs-extra": "^7.0.0",
        "@types/hapi__boom": "^7.4.0",
        "@types/hapi__hapi": "^18.2.1",
        "@types/jest": "^24.0.13",
        "@types/lodash.minby": "^4.6.6",
        "@types/lodash.sample": "^4.2.6",
        "@types/pino": "^5.20.0",
        "@types/prettier": "^1.16.4",
        "@types/pretty-bytes": "^5.1.0",
        "@types/pretty-ms": "^4.0.0",
        "@types/prompts": "^2.4.0",
        "@types/rimraf": "^2.0.2",
        "@types/semver": "^6.0.0",
        "@types/uuid": "^3.4.4",
        "@types/wif": "^2.0.1",
        "codecov": "^3.5.0",
        "del-cli": "^2.0.0",
        "jest": "^24.8.0",
        "jest-extended": "^0.11.1",
        "prettier": "^1.17.1",
        "rimraf": "^2.6.3",
        "ts-jest": "^24.0.2",
        "tslint": "^5.17.0",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.5.1"
    },
    "engines": {
        "node": ">=10.x"
    },
    "publishConfig": {
        "access": "public"
    }
}
